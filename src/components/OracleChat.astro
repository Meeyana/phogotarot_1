<style is:global>
  /* --- VARIABLES --- */
  :root {
    --gold-primary: #F2C94C;
    --gold-soft: #fcefc7;
    --bg-dark: #0b132b;
    --bg-panel: rgba(20, 27, 45, 0.95);
