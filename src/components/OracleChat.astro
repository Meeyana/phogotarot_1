    transform: scale(0.95) translateY(20px);
    pointer-events: none;
    visibility: hidden;
  }

  /* --- HEADER --- */
  .chat-header {
    background: rgba(255, 255, 255, 0.03);
    padding: 12px 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
