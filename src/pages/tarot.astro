        }

        /* Keyframes cho hiệu ứng */
        @keyframes system-wobble {
            0% { transform: rotateY(-10deg) rotateX(5deg); }
            50% { transform: rotateY(10deg) rotateX(-5deg); }
            100% { transform: rotateY(-10deg) rotateX(5deg); }
        }

        /* (CHỈNH SỬA) Giảm góc nghiêng rotateX để quỹ đạo nhìn tròn hơn */
        @keyframes orbit-spin-1 {
            from { transform: rotateX(65deg) rotateZ(0deg); }
            to   { transform: rotateX(65deg) rotateZ(360deg); }
