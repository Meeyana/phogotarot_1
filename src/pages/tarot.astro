        /* --- (MỚI) CSS CHO LOADER HÀNH TINH 3D --- */
        .interpretation-loader {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 1.5rem 1rem; /* (CHỈNH SỬA) Giảm padding cho gọn hơn */
            /* min-height: 250px; (XÓA) Bỏ min-height */
            overflow: hidden; 
            perspective: 800px; /* (MỚI) Thêm perspective cho 3D */
        }

        .loader-planet-system {
            position: relative;
            width: 200px;
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            transform-style: preserve-3d;
            /* Hiệu ứng xoay nhẹ toàn hệ thống */
            animation: system-wobble 15s infinite ease-in-out;
        }

        .loader-planet-sphere {
            width: 100px; /* (MỚI) Tăng kích thước cho ảnh */
            height: 100px; /* (MỚI) Tăng kích thước cho ảnh */
            border-radius: 50%;
            
            /* === (CHỈNH SỬA) SỬ DỤNG ẢNH PNG === */
            /* !!! THAY URL ẢNH PNG CỦA BẠN VÀO ĐÂY !!! */
            /* Ví dụ: background-image: url('hinh-hanh-tinh.png'); */
            background-image: url('planet.png'); /* (CHỈNH SỬA) Đổi sang ảnh local */
            
            background-size: cover; /* Hiển thị toàn bộ ảnh */
            background-position: center;
            background-color: transparent; /* Đảm bảo không có nền */
            
            /* (MỚI) Thêm lại hiệu ứng phát sáng (nhấp nháy) */
            animation: planet-glow 2.5s infinite ease-in-out;
            
            position: absolute;
        }

        .loader-orbit {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            transform-style: preserve-3d;
            /* Hiệu ứng xoay 360 độ */
            animation-iteration-count: infinite;
            animation-timing-function: linear;
        }

        /* Quỹ đạo 1 (Sao trắng) */
        .orbit-1 {
            animation-name: orbit-spin-1;
            animation-duration: 3s; /* (CHỈNH SỬA) Tăng tốc từ 5s */
        }
        .orbit-1::before {
            content: '';
            position: absolute;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #fff;
            box-shadow: 0 0 15px #fff;
            top: 50%; /* Đặt ở giữa */
            left: 0; /* Đặt ở cạnh trái */
            transform: translate(-50%, -50%); /* Căn giữa vào quỹ đạo */
            filter: blur(3px);
        }

        /* Quỹ đạo 2 (Sao vàng) */
        .orbit-2 {
            animation-name: orbit-spin-2;
            animation-duration: 5s; /* (CHỈNH SỬA) Tăng tốc từ 8s */
        }
        .orbit-2::before {
            content: '';
            position: absolute;
            width: 7px;
            height: 7px;
            border-radius: 50%;
            background: #ffc;
            box-shadow: 0 0 15px #ffc;
            top: 50%;
            left: 0;
            transform: translate(-50%, -50%);
            filter: blur(3px);
        }

        /* Quỹ đạo 3 (Sao đỏ) */
        .orbit-3 {
            animation-name: orbit-spin-3;
            animation-duration: 7s; /* (CHỈNH SỬA) Tăng tốc từ 12s */
        }
        .orbit-3::before {
            content: '';
            position: absolute;
            width: 5px;
            height: 5px;
            border-radius: 50%;
            background: #fcc;
            box-shadow: 0 0 15px #fcc;
            top: 50%;
            left: 0;
            transform: translate(-50%, -50%);
            filter: blur(3px);
        }


        /* (MỚI) Quỹ đạo 4 (Cyan) */
        .orbit-4 {
            animation-name: orbit-spin-4;
            animation-duration: 10s;
        }
        .orbit-4::before {
            content: '';
            position: absolute;
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background: #0ff;
            box-shadow: 0 0 15px #0ff;
            top: 50%;
            left: 0;
            transform: translate(-50%, -50%);
            filter: blur(3px);
        }

        /* (MỚI) Quỹ đạo 5 (Tím) */
        .orbit-5 {
            animation-name: orbit-spin-5;
            animation-duration: 14s;
        }
        .orbit-5::before {
            content: '';
            position: absolute;
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: #f0f;
            box-shadow: 0 0 15px #f0f;
            top: 50%;
            left: 0;
            transform: translate(-50%, -50%);
            filter: blur(3px);
        }


        .loader-text {
            margin-top: 1.5rem;
            font-size: 1.1rem;
