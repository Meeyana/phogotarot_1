        }

        /* (CHỈNH SỬA) Thêm keyframes cho 2 quỹ đạo mới */
        @keyframes orbit-spin-4 {
            from { transform: rotateX(65deg) rotateY(-45deg) rotateZ(0deg); }
            to   { transform: rotateX(65deg) rotateY(-45deg) rotateZ(360deg); }
