document.addEventListener('DOMContentLoaded', async () => {
    // Chỉ chạy các hàm này nếu các phần tử game tồn tại
    if (document.getElementById('question-screen')) {
        // Init game
        await initialize(); 
        await loadSuggestedQuestions(); 
        loadSessionState(); 

