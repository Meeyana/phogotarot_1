        @keyframes orbit-spin-5 {
            from { transform: rotateX(65deg) rotateY(30deg) rotateZ(0deg); }
            to   { transform: rotateX(65deg) rotateY(30deg) rotateZ(360deg); }
        }

        @keyframes text-fade {
