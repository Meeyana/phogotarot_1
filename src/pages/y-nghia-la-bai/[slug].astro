// 1. Import Layout
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 2. (ĐÃ XÓA) Bỏ getStaticPaths()
// export async function getStaticPaths() { ... }

// 3. (MỚI) Lấy 'slug' từ URL của người dùng
const { slug } = Astro.params;

// 4. (MỚI) Lấy TẤT CẢ lá bài để tìm lá bài hiện tại
const allCards = await getCollection('cards');

// 5. (MỚI) Tìm lá bài hiện tại dựa trên slug
const card = allCards.find(c => c.slug === slug);

// 6. (MỚI) Xử lý 404 nếu không tìm thấy lá bài (VÔ CÙNG QUAN TRỌNG)
if (!card) {
  // Nếu người dùng gõ URL sai, chuyển họ về trang 404
  return Astro.redirect('/404');
  // Hoặc: return new Response(null, { status: 404, statusText: 'Not Found' });
}

// 7. (GIỮ NGUYÊN) Render và lấy dữ liệu
// Vì đã có 'card', chúng ta không cần "Astro.props" nữa
const { Content } = await card.render();
const { title, excerpt, image, upright_keywords, reversed_keywords, pubDate, group, index } = card.data;

// 8. (GIỮ NGUYÊN) Xử lý ngày đăng
const postDate = pubDate ? new Date(pubDate) : null;
const displayDate = postDate ? postDate.toLocaleDateString('vi-VN', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric'
}) : null;

// 9. (GIỮ NGUYÊN) Cập nhật Schema
const schema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": excerpt,
  "image": new URL(image, Astro.site).href,
  "author": { "@type": "Organization", "name": "Phở Gõ Tarot" },
  "publisher": { "@type": "Organization", "name": "Phở Gõ Tarot", "logo": { "@type": "ImageObject", "url": "https://phogotarot.com/images/logo.png" }},
  ...(postDate && { "datePublished": postDate.toISOString() })
};

// 10. (GIỮ NGUYÊN) Lấy URL hiện tại để chia sẻ
const currentUrl = Astro.url.href;
const shareImage = new URL(image, Astro.site).href;

// 11. (TỐI ƯU HÓA) Lấy các lá bài liên quan
// Chúng ta không cần gọi getCollection() LẦN NỮA
// vì đã có 'allCards' ở bước 4
const relatedCards = allCards
  .filter(item => 
    item.data.group === group && // Lọc các lá bài cùng 'group'
    item.data.index !== index   // Loại bỏ chính lá bài hiện tại
  )
  .sort((a, b) => a.data.index - b.data.index); // Sắp xếp theo index

// 12. (GIỮ NGUYÊN) Tạo tên nhóm
const groupName = group.charAt(0).toUpperCase() + group.slice(1);
