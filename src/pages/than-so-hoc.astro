---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Tra Cứu Thần Số Học - Phở Gõ Tarot";
const pageDesc = "Khám phá bản đồ cuộc đời qua Họ Tên và Ngày Sinh. Tra cứu Số Chủ Đạo, Vận Mệnh, Linh Hồn miễn phí.";
---

<BaseLayout title={pageTitle} description={pageDesc}>
  <!-- Hiệu ứng sao nền đã có trong BaseLayout/body -->
  <div id="stars-bg"></div>
  
  <main class="numerology-container fade-in-up">
    
    <!-- Header Section -->
    <section class="hero-section text-center">
      <h1 class="hero-title">Thần Số Học</h1>
      <p class="hero-subtitle">
        Nhập <span class="text-gold">Họ Tên</span> trên giấy khai sinh và <span class="text-gold">Ngày Sinh</span> dương lịch để vũ trụ gửi đến bạn bản đồ định mệnh.
      </p>
    </section>

    <!-- Input Form - Style Dark Glass -->
    <section class="input-section">
      <div class="mystic-form-box">
        
        <!-- Decorative Elements -->
        <div class="corner-decoration top-left"></div>
        <div class="corner-decoration top-right"></div>
        <div class="corner-decoration bottom-left"></div>
        <div class="corner-decoration bottom-right"></div>

        <div class="form-grid">
          <!-- 1. Họ Tên -->
          <div class="input-group">
            <label for="fullName">Họ và Tên Đầy Đủ <span class="required">*</span></label>
            <input type="text" id="fullName" class="mystic-input" placeholder="Ví dụ: NGUYEN VAN A" autocomplete="off">
          </div>

          <!-- 2. Biệt Danh (MỚI) -->
          <div class="input-group">
            <label for="nickname">Biệt Danh / Tên Thường Gọi</label>
            <input type="text" id="nickname" class="mystic-input" placeholder="Ví dụ: Anna" autocomplete="off">
          </div>
          
          <!-- 3. Ngày Sinh -->
          <div class="input-group">
            <label for="dob">Ngày Sinh (Dương Lịch) <span class="required">*</span></label>
            <input type="date" id="dob" class="mystic-input">
          </div>

          <!-- 4. Giới Tính (MỚI) -->
          <div class="input-group">
            <label for="gender">Giới Tính</label>
            <select id="gender" class="mystic-input">
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
                <option value="other">Khác</option>
            </select>
          </div>
        </div>

        <div class="action-area">
            <button id="btn-analyze" class="btn-primary mystic-btn">
                <span class="icon">✨</span> Giải Mã Định Mệnh
            </button>
            <p id="error-msg" class="error-text hidden">Vui lòng nhập đầy đủ thông tin bắt buộc.</p>
        </div>

      </div>
    </section>

  </main>

  <script>
    const btnAnalyze = document.getElementById('btn-analyze');
    const errorMsg = document.getElementById('error-msg');
    const inputs = document.querySelectorAll('.mystic-input');

    // Xóa lỗi khi người dùng bắt đầu nhập liệu
    inputs.forEach(input => {
        input.addEventListener('input', () => {
            if (errorMsg) errorMsg.classList.add('hidden');
        });
    });

    if (btnAnalyze) {
        btnAnalyze.addEventListener('click', () => {
            // Lấy giá trị từ 4 trường
            const nameInput = document.getElementById('fullName') as HTMLInputElement;
            const dobInput = document.getElementById('dob') as HTMLInputElement;
            const nicknameInput = document.getElementById('nickname') as HTMLInputElement;
            const genderInput = document.getElementById('gender') as HTMLSelectElement;

            const name = nameInput.value.trim();
            const dob = dobInput.value;
            const nickname = nicknameInput.value.trim();
            const gender = genderInput.value;

            // Validate các trường bắt buộc (Tên & Ngày sinh)
            if (!name || !dob) {
                if (errorMsg) errorMsg.classList.remove('hidden');
                
                // Hiệu ứng rung lắc báo lỗi
                const box = document.querySelector('.mystic-form-box');
                if (box) {
                    box.classList.add('shake');
                    setTimeout(() => box.classList.remove('shake'), 500);
                }
                return;
            }

            // Animation loading trên nút
            btnAnalyze.innerHTML = '<span class="animate-spin">✦</span> Đang Kết Nối...';
            (btnAnalyze as HTMLButtonElement).style.opacity = "0.8";
            (btnAnalyze as HTMLButtonElement).disabled = true;

            // Tạo URL params với đủ 4 trường
            const params = new URLSearchParams({ name, dob, nickname, gender });
            
            // Delay nhẹ để người dùng thấy hiệu ứng
            setTimeout(() => {
                window.location.href = `/ket-qua-than-so-hoc?${params.toString()}`;
            }, 800);
        });
    }
  </script>

  <style>
    /* === LAYOUT & SPACING === */
    .numerology-container {
        padding-top: 6rem; /* Tránh menu */
        padding-bottom: 4rem;
        min-height: 90vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        z-index: 1;
    }

    .hero-section {
        margin-bottom: 3rem;
        padding: 0 1rem;
    }
    
    /* Sử dụng biến từ style.css */
    .hero-title {
        /* Đã có style từ global css */
        margin-bottom: 1rem;
    }
    
    .hero-subtitle {
        font-family: var(--font-body);
        font-size: 1.1rem;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
        opacity: 0.9;
        text-shadow: none;
    }
    .text-gold { color: var(--gold-color); font-weight: bold; }

    /* === MYSTIC FORM BOX === */
    .mystic-form-box {
        background: rgba(11, 19, 43, 0.6); /* Dark blue trong suốt */
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(242, 201, 76, 0.3); /* Viền vàng mờ */
        border-radius: 20px;
        padding: 2.5rem;
        width: 100%;
        max-width: 700px; /* Tăng nhẹ max-width để grid đẹp hơn */
        position: relative;
        box-shadow: 0 0 40px rgba(0, 0, 0, 0.4), inset 0 0 20px rgba(242, 201, 76, 0.05);
        margin: 0 1rem;
    }

    /* Góc trang trí */
    .corner-decoration {
        position: absolute;
        width: 20px; height: 20px;
        border-color: var(--gold-color);
        border-style: solid;
        opacity: 0.8;
        pointer-events: none;
    }
    .top-left { top: -1px; left: -1px; border-width: 2px 0 0 2px; border-top-left-radius: 10px; }
    .top-right { top: -1px; right: -1px; border-width: 2px 2px 0 0; border-top-right-radius: 10px; }
    .bottom-left { bottom: -1px; left: -1px; border-width: 0 0 2px 2px; border-bottom-left-radius: 10px; }
    .bottom-right { bottom: -1px; right: -1px; border-width: 0 2px 2px 0; border-bottom-right-radius: 10px; }

    /* Grid Inputs - Điều chỉnh để chứa 4 trường */
    .form-grid {
        display: grid;
        gap: 1.5rem;
    }
    @media (min-width: 640px) { 
        .form-grid { 
            grid-template-columns: 1fr 1fr; /* Chia 2 cột */
        } 
    }

    .input-group { display: flex; flex-direction: column; text-align: left; }
    
    .input-group label {
        font-family: var(--font-title);
        color: var(--gold-color);
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        letter-spacing: 1px;
        text-transform: uppercase;
    }
    .required { color: #ff6b6b; margin-left: 3px; }

    .mystic-input {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 1rem;
        color: #fff;
        font-family: var(--font-body);
        font-size: 1rem;
        outline: none;
        transition: all 0.3s ease;
        text-shadow: none;
        width: 100%; /* Đảm bảo full width */
    }

    /* Style riêng cho Select để đồng bộ */
    select.mystic-input {
        appearance: none;
        cursor: pointer;
        /* Custom arrow cho select */
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%23F2C94C' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 1rem center;
        background-size: 1em;
    }
    select.mystic-input option {
        background-color: #0b132b; /* Màu nền dropdown option */
        color: #fff;
    }

    .mystic-input:focus {
        border-color: var(--gold-color);
        background: rgba(255, 255, 255, 0.08);
        box-shadow: 0 0 15px rgba(242, 201, 76, 0.2);
    }
    
    /* Date picker icon fix */
    .mystic-input::-webkit-calendar-picker-indicator {
        filter: invert(1) sepia(1) saturate(5) hue-rotate(180deg);
        cursor: pointer;
        opacity: 0.7;
    }

    /* === BUTTON & ACTION === */
    .action-area { margin-top: 2rem; text-align: center; }

    .mystic-btn {
        width: 100%;
        padding: 1rem;
        font-size: 1.1rem;
        letter-spacing: 1px;
        font-family: var(--font-title);
        box-shadow: 0 0 20px rgba(242, 201, 76, 0.3);
        display: flex; justify-content: center; align-items: center; gap: 0.5rem;
    }
    .mystic-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 0 30px rgba(242, 201, 76, 0.5);
    }

    .error-text {
        color: #ff6b6b;
        margin-top: 1rem;
        font-size: 0.9rem;
        animation: fadeIn 0.3s;
    }

    /* === ANIMATIONS === */
    .fade-in-up { animation: fadeInUp 0.8s ease-out; }
    
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .shake { animation: shake 0.5s; }
    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
    }
    
    .hidden { display: none; }
    .animate-spin { display: inline-block; animation: spin 1s linear infinite; }
    @keyframes spin { 100% { transform: rotate(360deg); } }
  </style>
</BaseLayout>