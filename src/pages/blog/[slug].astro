---
// 1. Import Layout
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 2. (MỚI) Lấy 'slug' từ URL của người dùng
const { slug } = Astro.params;

// 3. (MỚI) Lấy TẤT CẢ bài viết để tìm bài viết hiện tại
const allPosts = await getCollection('blog');

// 4. (MỚI) Tìm bài viết hiện tại dựa trên slug
const post = allPosts.find(p => p.slug === slug);

// 5. (MỚI) Xử lý 404 nếu không tìm thấy bài viết
if (!post) {
  return Astro.redirect('/404');
}

// 6. (GIỮ NGUYÊN) Render và lấy dữ liệu
const { Content } = await post.render();

// 7. (GIỮ NGUYÊN) Xử lý ngày đăng
const postDate = post.data.pubDate ? new Date(post.data.pubDate) : null;
const displayDate = postDate ? postDate.toLocaleDateString('vi-VN', {
    day: '2-digit',
    month: '2-digit',
    year: 'numeric'
}) : null;

// 8. (CẬP NHẬT) Lọc bài viết liên quan thông minh theo 'category'
const currentCategory = post.data.category;
let relatedPosts = [];

if (currentCategory) {
  const postsInSameCategory = allPosts
    .filter(p => p.slug !== post.slug && p.data.category === currentCategory)
    .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());

  if (postsInSameCategory.length >= 3) {
    relatedPosts = postsInSameCategory.slice(0, 3);
  } else {
    relatedPosts = [...postsInSameCategory];
  }
}

if (relatedPosts.length < 3) {
  const existingSlugs = new Set(relatedPosts.map(p => p.slug));
  existingSlugs.add(post.slug);
  
  const fillerPosts = allPosts
    .filter(p => !existingSlugs.has(p.slug))
    .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());

  const needed = 3 - relatedPosts.length;
  relatedPosts.push(...fillerPosts.slice(0, needed));
}

// 9. (GIỮ NGUYÊN) TẠO SCHEMA JSON-LD
const schema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": post.data.title,
  "description": post.data.excerpt,
  "image": new URL(post.data.image, Astro.site).href,
  "author": { "@type": "Organization", "name": "Phở Gõ Tarot" },
  "publisher": {
    "@type": "Organization",
    "name": "Phở Gõ Tarot",
    "logo": { "@type": "ImageObject", "url": "https://phogotarot.com/images/logo.png" }
  },
  ...(postDate && { "datePublished": postDate.toISOString() })
};

const currentUrl = Astro.url.href;
const shareImage = new URL(post.data.image, Astro.site).href;
---

<BaseLayout
  title={`${post.data.title} - Phở Gõ Tarot`}
  description={post.data.excerpt}
  ogImage={post.data.image}
>
  <main id="homepage-content">
    <section class="homepage-section" style="padding-top: 4rem; min-height: 80vh;">
      <div class="container">
        
        <nav class="breadcrumbs">
          <a href="/">Trang chủ</a>
          <span class="divider">&raquo;</span>
          <a href="/blog">Bài viết</a> 
          <span class="divider">&raquo;</span>
          <span class="current">{post.data.title}</span>
        </nav>

        <article class="post-main-content">
          <h1 class="hero-title">{post.data.title}</h1>

          {displayDate && (
            <div class="post-meta">
              <span>Ngày đăng: </span>
              <time datetime={postDate.toISOString()}>{displayDate}</time>
            </div>
          )}

          <img src={post.data.image} alt={post.data.title} class="section-image" />

          <div id="post-content">
            <Content />
          </div>

          <div class="share-buttons">
            <span>Chia sẻ:</span>
            <a 
              href={`https://www.facebook.com/sharer/sharer.php?u=${currentUrl}`} 
              class="share-btn facebook" 
              target="_blank" 
              rel="noopener noreferrer"
              aria-label="Chia sẻ lên Facebook"
            >
              <i class="fa-brands fa-facebook-f"></i>
            </a>
            <a 
              href={`https://pinterest.com/pin/create/button/?url=${currentUrl}&media=${shareImage}&description=${post.data.title}`}
              class="share-btn pinterest" 
              target="_blank" 
              rel="noopener noreferrer"
              aria-label="Ghim lên Pinterest"
            >
              <i class="fa-brands fa-pinterest"></i>
            </a>
          </div>

          <div class="post-disclaimer">
            <p><strong>Lưu ý:</strong> Những thông điệp từ Phở Gõ Tarot gửi đến bạn mang ý nghĩa tham khảo và chiêm nghiệm cá nhân. Chúng tôi không thay thế vai trò của các chuyên gia y tế, tài chính hay pháp lý. Mong bạn đón nhận các lá bài với tâm thế cởi mở, lắng nghe trực giác và tự làm chủ quyết định của chính mình.</p>
          </div>
          

          <!-- CTA Banner (Nút màu vàng rực rỡ) -->
          <div class="cta-banner">
            <div class="cta-content">
              <h3>Bạn đang tìm kiếm câu trả lời?</h3>
              <p>Hãy để những lá bài Tarot soi sáng con đường của bạn. Trải nghiệm một phiên đọc bài cá nhân hoá ngay hôm nay.</p>
            </div>
            <a href="/tarot" class="cta-button">Trải Bài Ngay</a>
          </div>

          <div class="related-posts">
            <h2 class="widget-title">Bài viết liên quan</h2>
            <div class="related-posts-grid">
              {relatedPosts.map(related => (
                <a href={`/blog/${related.slug}`} class="related-post-card">
                  <div class="related-card-img-wrapper">
                    <img src={related.data.image} alt={related.data.title} />
                  </div>
                  <h4>{related.data.title}</h4>
                  <p class="related-card-desc">{related.data.excerpt}</p>
                </a>
              ))}
            </div>
          </div>

          <!-- Nút Quay Lại (Có class back-btn riêng để style hover mạnh hơn) -->
          <a href="/blog" class="btn-outline back-btn" style="margin-top: 3rem;">&larr; Quay lại danh sách</a>
        </article>

      </div>
    </section>
  </main>
    
  <script 
    type="application/ld+json" 
    slot="head"
    set:html={JSON.stringify(schema)}
  />

  <style>
    /* --- Cài đặt chung & Layout --- */
    .homepage-section { padding: 4rem 1rem; position: relative; z-index: 1; }
    .container { 
      max-width: 900px; 
      margin: auto; 
      padding: 0 1rem; 
    }
    .post-main-content { width: 100%; }

    /* --- TYPOGRAPHY --- */
    .hero-title { 
      font-family: var(--font-title); 
      color: #ffffff; 
      font-size: 2.8rem; 
      font-weight: 700;
      margin-bottom: 1rem;
      text-align: left; 
      line-height: 1.2;
      text-shadow: 0 0 10px rgba(242, 201, 76, 0.5), 0 0 20px rgba(242, 201, 76, 0.3);
    }
    .section-image { 
      width: 100%; height: auto; max-height: 500px; border-radius: 16px; 
      object-fit: cover; margin-bottom: 3rem; 
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* --- NÚT VIỀN (BTN OUTLINE) & NÚT BACK --- */
    .btn-outline { 
      display: inline-block;
      background: transparent; 
      border: 1px solid var(--gold-color, #F2C94C); 
      color: var(--gold-color, #F2C94C); 
      padding: 0.7rem 1.5rem; 
      border-radius: 8px; font-weight: 600; 
      text-decoration: none; text-shadow: none;
      transition: all 0.3s ease;
    }
    /* Hover chung cho các nút viền */
    .btn-outline:hover { 
        background-color: rgba(242, 201, 76, 0.1);
        box-shadow: 0 0 15px rgba(242, 201, 76, 0.3);
        color: #fff;
        transform: translateY(-2px);
    }
    
    /* (MỚI) Hiệu ứng hover riêng cho nút Quay Lại: Lấp đầy màu vàng */
    .back-btn:hover {
        background-color: var(--gold-color, #F2C94C);
        color: #050A1F; /* Chữ màu tối */
        box-shadow: 0 0 20px rgba(242, 201, 76, 0.5);
        transform: translateX(-5px); /* Di chuyển nhẹ sang trái */
    }

    /* --- Breadcrumbs & Meta --- */
    .breadcrumbs { margin-bottom: 2rem; font-size: 0.9rem; color: #ccc; text-shadow: none; }
    .breadcrumbs a { color: #ccc; text-decoration: none; transition: color 0.3s; }
    .breadcrumbs a:hover { color: var(--gold-color, #F2C94C); }
    .breadcrumbs .divider { margin: 0 0.5rem; color: rgba(255,255,255,0.3); }
    .breadcrumbs .current { font-weight: 600; color: var(--gold-color, #F2C94C); }
    .post-meta { font-size: 0.95rem; color: #aaa; margin-bottom: 1.5rem; text-shadow: none; display: flex; align-items: center; gap: 0.5rem; }
    .post-meta time { font-weight: 600; color: var(--gold-color, #F2C94C); }

    /* --- CSS Nội dung bài viết --- */
    #post-content { font-size: 1.1rem; line-height: 1.8; text-shadow: none; text-align: left; color: #e0e0e0; }
    #post-content h2, #post-content h3 { font-family: var(--font-title); color: var(--gold-color, #F2C94C); margin-top: 3rem; margin-bottom: 1rem; text-shadow: 0 0 10px rgba(242, 201, 76, 0.2); }
    #post-content h2 { font-size: 2rem; border-bottom: 1px solid rgba(242, 201, 76, 0.2); padding-bottom: 0.5rem;}
    #post-content h3 { font-size: 1.5rem; }
    #post-content p { margin-bottom: 1.5rem; }
    #post-content ul, #post-content ol { padding-left: 1.5rem; margin-bottom: 1.5rem; }
    #post-content :global(img) { display: block; width: 100%; max-width: 600px; height: auto; border-radius: 8px; margin: 2rem auto; border: 1px solid rgba(255, 255, 255, 0.1); }
    #post-content :global(a) { color: var(--gold-color, #F2C94C); text-decoration: none; font-weight: 600; border-bottom: 1px dashed rgba(242, 201, 76, 0.5); transition: all 0.3s; }
    #post-content :global(a:hover) { color: #fff; border-bottom-style: solid; text-shadow: 0 0 5px var(--gold-color, #F2C94C); }
    #post-content :global(strong) { color: #fff; }
    #post-content :global(.text-center){
      text-align: center;
    }

    /* --- CTA Banner & Button (ĐÃ SỬA MÀU VÀNG) --- */
    .cta-banner {
      background: rgba(255, 255, 255, 0.03);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(242, 201, 76, 0.3);
      border-radius: 16px;
      padding: 2.5rem;
      display: flex; flex-direction: column; justify-content: space-between; align-items: center;
      gap: 2rem; margin-bottom: 4rem; text-align: center;
      box-shadow: 0 0 30px rgba(0,0,0,0.2); 
    }
    .cta-content h3 {
      font-family: var(--font-title);
      color: var(--gold-color, #F2C94C);
      font-size: 1.8rem; margin: 0 0 1rem 0;
      text-shadow: 0 0 15px rgba(242, 201, 76, 0.3);
    }
    .cta-content p { margin: 0; font-size: 1.05rem; opacity: 0.9; text-shadow: none; max-width: 600px; color: #ddd; }
    
    /* (MỚI) Nút CTA màu vàng rực (Solid Gold Gradient) */
    .cta-button {
      background: linear-gradient(135deg, #D4AF37 0%, #F2C94C 50%, #FFD700 100%);
      color: #050A1F;
      text-decoration: none;
      font-weight: 700;
      padding: 1rem 2.5rem;
      border-radius: 50px;
      text-shadow: none;
      transition: all 0.3s;
      flex-shrink: 0;
      box-shadow: 0 4px 15px rgba(212, 175, 55, 0.4);
      border: 2px solid transparent; /* Để tránh vỡ layout khi hover */
    }
    .cta-button:hover {
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 0 25px rgba(242, 201, 76, 0.8);
      background: linear-gradient(135deg, #FFF 0%, #FFD700 50%, #F2C94C 100%); /* Sáng chói khi hover */
    }
    @media (min-width: 768px) {
      .cta-banner { flex-direction: row; text-align: left; }
      .cta-content { flex-grow: 1; }
    }

    /* --- Các phần khác --- */
    .share-buttons { display: flex; flex-wrap: wrap; gap: 1rem; align-items: center; margin: 4rem 0; padding: 2rem 0; border-top: 1px solid rgba(255, 255, 255, 0.1); border-bottom: 1px solid rgba(255, 255, 255, 0.1); }
    .share-buttons span { font-weight: 600; font-family: var(--font-title); font-size: 1.1rem; color: #fff; margin-right: 0.5rem; }
    .share-btn { display: flex; align-items: center; justify-content: center; width: 45px; height: 45px; border-radius: 50%; text-decoration: none; text-shadow: none; color: #fff; transition: all 0.3s; border: 1px solid rgba(255,255,255,0.1); }
    .share-btn:hover { transform: translateY(-3px); }
    .share-btn.facebook { background-color: #1877F2; box-shadow: 0 0 10px rgba(24, 119, 242, 0.4); }
    .share-btn.pinterest { background-color: #E60023; box-shadow: 0 0 10px rgba(230, 0, 35, 0.4); }
    .widget-title { font-family: var(--font-title); color: #fff; margin-top: 0; margin-bottom: 2rem; font-size: 2rem; text-align: center; text-shadow: 0 0 15px rgba(242, 201, 76, 0.4); }
    .related-posts { margin-bottom: 2rem; }
    .related-posts-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; }
    .related-post-card { display: flex; flex-direction: column; text-decoration: none; background-color: rgba(255, 255, 255, 0.02); border: 1px solid rgba(255, 255, 255, 0.12); border-radius: 12px; overflow: hidden; transition: all 0.4s ease; }
    .related-post-card:hover { transform: translateY(-5px); border-color: rgba(242, 201, 76, 0.6); box-shadow: 0 5px 15px rgba(0,0,0,0.3), 0 0 10px rgba(242, 201, 76, 0.1); }
    .related-card-img-wrapper { width: 100%; aspect-ratio: 16 / 10; overflow: hidden; position: relative; }
    .related-card-img-wrapper::after { content: ''; position: absolute; bottom: 0; left: 0; right: 0; height: 1px; background: rgba(255,255,255,0.1); }
    .related-post-card img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s; }
    .related-post-card:hover img { transform: scale(1.1); }
    .related-post-card h4 { font-family: var(--font-title); color: #fff; font-size: 1.15rem; line-height: 1.4; padding: 1rem 1rem 0.5rem 1rem; margin: 0; text-shadow: none; transition: color 0.3s; }
    .related-post-card:hover h4 { color: #fff; text-shadow: 0 0 10px rgba(242, 201, 76, 0.5); }
    .related-card-desc { font-size: 0.9rem; opacity: 0.7; text-shadow: none; padding: 0 1rem 1.5rem 1rem; margin: 0; flex-grow: 1; color: #ccc; line-height: 1.5; }
    @media (max-width: 900px) { .hero-title { font-size: 2.2rem; } }
    @media (max-width: 768px) { .related-posts-grid { grid-template-columns: repeat(2, 1fr); } }
    @media (max-width: 600px) { .homepage-section { padding: 4rem 0.5rem; } .container { padding: 0 0.5rem; } .related-posts-grid { grid-template-columns: 1fr; } .hero-title { font-size: 2rem; } #post-content { font-size: 1rem; } }
    /* --- Style cho phần Disclaimer (Lưu ý) --- */
    .post-disclaimer {
        margin-bottom: 3rem; /* Cách banner CTA một chút */
        padding: 1.2rem;
        background: rgba(255, 255, 255, 0.03); /* Nền tối mờ nhẹ */
        border-left: 3px solid var(--gold-color, #F2C94C); /* Viền vàng bên trái tạo điểm nhấn */
        border-radius: 0 8px 8px 0;
        font-size: 0.9rem; /* Chữ nhỏ hơn body một chút */
        line-height: 1.6;
        color: #aaa; /* Màu chữ xám nhẹ để không quá nổi bật nhưng vẫn dễ đọc */
        font-style: italic; /* Chữ nghiêng tạo cảm giác lưu ý nhẹ nhàng */
    }
    
    .post-disclaimer strong {
        color: var(--gold-color, #F2C94C);
        font-style: normal;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 1px;
        margin-right: 5px;
    }
  </style>
</BaseLayout>